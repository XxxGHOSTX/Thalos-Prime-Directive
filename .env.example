# Thalos Prime v3.0 - Environment Configuration (Web Deployment)
# Copy this file to .env and customize for your deployment

# System Configuration
THALOS_ENV=production    # Options: development, production, testing
THALOS_DEBUG=false       # Enable debug mode (set to false in production)

# Web Server Configuration
THALOS_API_HOST=0.0.0.0
THALOS_API_PORT=8000
THALOS_API_WORKERS=4     # Number of worker processes (for gunicorn/uvicorn)
FLASK_ENV=production     # Flask environment

# Memory/Storage Configuration
THALOS_STORAGE_TYPE=file  # Options: memory, file, redis, postgresql
THALOS_STORAGE_PATH=/app/data/storage.json  # For file-based storage
# THALOS_REDIS_URL=redis://localhost:6379/0  # For Redis storage
# THALOS_DATABASE_URL=postgresql://user:pass@localhost/thalos  # For PostgreSQL

# Security (IMPORTANT: Change these in production!)
THALOS_SECRET_KEY=change-me-in-production-to-a-random-secure-value
THALOS_API_KEY=change-me-to-secure-api-key-if-needed

# Logging Configuration
THALOS_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
THALOS_LOG_FILE=/app/logs/thalos.log

# Web Interface Configuration
THALOS_WEB_ENABLED=true
THALOS_AUTO_OPEN_BROWSER=true  # Auto-open browser on local deployments

# CIS Configuration
THALOS_CIS_ENABLED=true
THALOS_MEMORY_ENABLED=true
THALOS_CODEGEN_ENABLED=true
